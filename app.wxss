/**app.wxss**/
@import 'assets/styles/weui.wxss';

@import 'assets/styles/skyvow.wxss';
@import 'components/wux.wxss';


 .container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
} 


.refesh {
        width: 100rpx;
        height: 100rpx;
        /* background: rgba(0, 170, 152, 0.6)  center no-repeat; */
        background-size: 50rpx;
        border-radius: 50%;
        position: fixed;
        right: 15px;
        bottom: 80rpx;
        font-size: 28rpx;
        color: #fff;
        -webkit-transition: 0.4s;
        -webkit-transition: -webkit-transform 0.4s ease-out;
        transition: transform 0.4s ease-out;
        -moz-transition: -moz-transform 0.4s ease-out;
}
.tel-img{
        width: 100%;
        height: 100%;
} 

.content-b {
        position: fixed;
        bottom: 0;
        left: 0;
        display: block;
        width: 100%;
        margin-left: auto;
        margin-right: auto;
        padding-left: 14px;
        padding-right: 14px;
        box-sizing: border-box;
        text-align: center;
        text-decoration: none;
        color: #479de6;
        background-color: #fff;
        line-height: 2.55555556;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
        overflow: hidden;
}
.content-c {
        width: 100%;
        height: 70px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content:space-between;
        border-top: 1px solid #e5e5e5;
}
.content-left {
        width: auto;
        height: auto;
        display:flex;
        margin-left: 5px;
        flex-direction: row;
        align-items: center;

}

.content-title{
        line-height: 70px;
        font-size: 40rpx;
        color:#43967c;
        overflow:hidden; 
        text-overflow:ellipsis;   
        white-space:nowrap;   
}

.content-right {
        width: auto;
        height: auto;
        line-height: 50px;
        flex: none;
        font-size: 26rpx;
        font-weight: bold;
        color: #3bae78;
}


/**app.wxss**/
@import 'components/wux.wxss';
@import 'assets/styles/weui.wxss';
@import 'assets/styles/skyvow.wxss';

.container {
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        padding: 0;
        box-sizing: border-box;
}

.refesh {
        width: 100rpx;
        height: 100rpx;
        /* background: rgba(0, 170, 152, 0.6)  center no-repeat; */
        background-size: 50rpx;
        border-radius: 50%;
        position: fixed;
        right: 15px;
        bottom: 40rpx;
        font-size: 28rpx;
        color: #fff;
        -webkit-transition: 0.4s;
        -webkit-transition: -webkit-transform 0.4s ease-out;
        transition: transform 0.4s ease-out;
        -moz-transition: -moz-transform 0.4s ease-out;
}
.scan {
        width: 100rpx;
        height: 100rpx;
        /* background: rgba(0, 170, 152, 0.6)  center no-repeat; */
        background-size: 50rpx;
        border-radius: 50%;
        position: fixed;
        right: 15px;
        bottom: 150rpx;
        font-size: 28rpx;
        color: #fff;
        -webkit-transition: 0.4s;
        -webkit-transition: -webkit-transform 0.4s ease-out;
        transition: transform 0.4s ease-out;
        -moz-transition: -moz-transform 0.4s ease-out;
}

.tel-img {
        width: 100%;
        height: 100%;
}

.content-b {
        position: fixed;
        bottom: 0;
        left: 0;
        display: block;
        width: 100%;
        margin-left: auto;
        margin-right: auto;
        padding-left: 10px;
        padding-right: 10px;
        box-sizing: border-box;
        text-align: center;
        text-decoration: none;
        color: #479de6;
        background-color: #fff;
        line-height: 2.55555556;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
        overflow: hidden;
}

.content-c {
        width: 100%;
        height: 70px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        border-top: 1px solid #e5e5e5;
}

.content-left {
        width: auto;
        height: auto;
        display: flex;
        margin-left: 5px;
        flex-direction: row;
        align-items: center;
}

.content-title {
        line-height: 70px;
        font-size: 40rpx;
        color: #43967c;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
}

.content-right {
        width: auto;
        height: auto;
        line-height: 50px;
        flex: none;
        font-size: 26rpx;
        color: #3bae78;
}

.h0 {
        width: 100%;
        font-size: 60rpx;
        height: 80px;
        line-height: 80px;
        color: #484848;
}

.h1 {
        width: 100%;
        font-size: 64rpx;
        height: 80px;
        line-height: 80px;
        color: #484848;
        padding-left: 10px;
        padding-right: 10px;
        box-sizing: border-box;
        overflow: hidden;
        text-align: left;
}

.h2 {
        width: 100%;
        font-size: 50rpx;
        height: 60px;
        line-height: 60px;
        color: #484848;
        text-align: left;
        padding-left: 10px;
        padding-right: 10px;
        box-sizing: border-box;
        overflow: hidden;
        border-bottom: 1px solid #e5e5e5;
}

.h3 {
        width: 100%;
        font-size: 40rpx;
        height: 60px;
        line-height: 60px;
        color: #484848;
        padding-left: 10px;
        padding-right: 10px;
        box-sizing: border-box;
        overflow: hidden;
        text-align: left;
}

.h4 {
        width: 100%;
        font-size: 34rpx;
        color: #484848;
        text-align: left;
        padding-left: 10px;
        padding-right: 10px;
        box-sizing: border-box;
        overflow: hidden;
        font-weight: bold;
}

<view class="container">
        <swiper class="swiper_box" indicator-active-color="#ff0000" indicator-color="#fff" indicator-dots="{{ indicatorDots }}" autoplay="{{ autoplay }}" current="{{ current }}" interval="{{ interval }}" duration="{{ duration }}" circular="{{ circular }}" bindchange="bindchange" style="height:{{imgheights[current]}}px;">
                <block wx:for="{{ imgUrls }}" wx:key="id">
                        <swiper-item>
                                <image src="{{ item }}" data-src="{{item}}" bindload="imageLoad"  bindtap="previewImage" style='height:{{imgheights[index]}}px;width:100%;' class="slide-image" mode='widthFix' />
                        </swiper-item>
                </block>
        </swiper>

        <view class="img_box">
                <image src="{{mapSrc}}" bindtap="goOrder" mode='widthFif' />
        </view>


</view>
/**index.wxss**/

.container {
    min-height: 100%;
    padding: 0;
}

.top {
    width: 100%;
    height: 350rpx;
    background-color: #3bae78;
    display: flex;
    justify-content: center;
    -webkit-justify-content: center;
    flex-wrap: wrap;
    align-items: center;
}

.top-img {
    width: 131px;
    height: 80px;
    /* border-radius: 50%; */
}

.topTab {
    width: 100%;
    height: 240rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1px solid #e5e5e5;
}

.top_l {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.top_c {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.topTab_img {
    width: 100rpx;
    height: 100rpx;
}

.topTab_text {
    text-align: center;
    margin-top: 20rpx;
    font-size: 32rpx;
    color: #484848;
}

.discover-title {
    width: 100%;
    height: 50px;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}

.discover-left {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    text-align: left;
}

.title_sub1 {
    font-size: 18px;
    margin-left: 20px;
    color: #333;
}

.title_sub2 {
    font-size: 12px;
    margin-left: 10px;
    color: #666;
}

.discover-right {
    text-align: right;
    margin-right: 20px;
    color: #666;
    font-size: 12px;
}

.camps {
    margin-top: 20rpx;
    width: 92%;
    height: auto;
}

.travel-notes {
    width: 100%;
    height: auto;
    background-color: #fff;
    padding: 0px;
    box-sizing: content-box;
    font-size: 20rpx;
    overflow: hidden;
    color: #000;
    display: inline-block;
    align-items: center;
    border-bottom: 1px solid #dedede;
}

.travel-img {
    width: 100%;
    height: auto;
    position: relative;
}

.main-img {
    width: 100%;
    height: auto;
}

.room-img {
    position: absolute;
    width: 77rpx;
    height: 77rpx;
    left: 10px;
    top: -2rpx;
}

.travel-title {
    width: auto;
    height: 60px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    overflow: hidden;
}

.camp-text-left {
    width: auto;
    height: auto;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.title {
    /* 单行文字超宽度 添加省略号*/
    line-height: 50rpx;
    font-size: 30rpx;
    color: #484848;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.info {
    font-size: 22rpx;
    color: #484848;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.camp-text-right {
    width: 80px;
    height: 40px;
    line-height: 40px;
    flex: none;
    text-align: right;
    font-size: 26rpx;
    font-weight: bold;
    color: #3bae78;
}

.userinfo {
        display: flex;
        width: 100%;
        height: 260rpx;
        flex-direction: column;
        padding: 50rpx 0;
        align-items: center;
        background: #3bae78;
}

.userinfo-avatar {
        width: 128rpx;
        height: 128rpx;
        margin: 20rpx;
        border-radius: 50%;
}

.userinfo-nickname {
        color: #fff;
}

.info_list {
        width: 100%;
}

.weui-grid {
        float: left;
        padding: 20px 10px;
        width: 33.33333333%;
        box-sizing: border-box;
        border-right: 0;
        border-bottom: 0;
}

weui-grids {
        border-top: 0;
        border-left: 0;
}

button::after {
        border: none;
        position:relative;
        display:block;
        margin-left:auto;
        margin-right:auto;
        padding-left:none;
        padding-right:none;
        box-sizing:border-box;
        font-size:none;
        text-align:center;
        text-decoration:none;
        line-height:30px;
        
        border-radius:none;
        -webkit-tap-highlight-color:transparent;
        overflow:hidden;
        color:#000000;
        background-color:#F8F8F8;

}
button {
        border: none;
        position:none;
        display:block;
        margin-left:none;
        margin-right:none;
        padding-left:none;
        padding-right:none;
        box-sizing:border-box;
        font-size:none;
        text-align:none;
        text-decoration:none;
        line-height:none;
        
        border-radius:none;
        -webkit-tap-highlight-color:none;
        overflow:none;
        color:none;
        background-color:#fff;

}
.button-hover{background: #ececec;} 

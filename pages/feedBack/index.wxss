/* pages/feedBack/index.wxss */

.container {
        display: flex;
        width: 100%;
        flex-direction: column;
}

.text {
        width: 100%;
        float: left;
        padding-left: 50rpx;
        padding-top: 15rpx;
        box-sizing: border-box;
}

.radio-group {
        padding-top: 50rpx;
        width: 100%;
}

.radio {
        padding-left: 50rpx;
}

.line {
        width: 100%;
        height: 1px;
        background: #ccc;
        margin-top: 30rpx;
}

.textarea {
        width: 100%;
        height: 200rpx;
        margin-top: 15rpx;
        color: #666;
        padding-left: 50rpx;
        padding-right: 20rpx;
        box-sizing: border-box;
        font-size: 30rpx;
}

.add-image {
        width: 100rpx;
        height: 100rpx;
        margin-left: 20rpx;
}

.img {
        width: 100%;
        padding: 50rpx;
         box-sizing: border-box;
}

.gallery {
        width: 100%;
}

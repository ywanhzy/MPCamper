
/* 顶部图片 */

.travel-img image {
        width: 100%;
        height: auto;
        position: relative;
}

.travel-title {
        width: 100%;
        height: auto;
        position: absolute;
        top: 80rpx;
        color: #fff;
        justify-content: center;
        align-items: center;
        display: flex;
        flex-direction: column;
}

.travel-title .title {
        width: 80%;
        text-align: center;
        font-size: 50rpx;
}

.travel-title .description {
        margin-top: 20rpx;
        text-align: center;
        font-size: 30rpx;
}

.img-title {
        height: auto;
        position: absolute;
        left: 10rpx;
        top: 400rpx;
        color: #fff;
        font-size: 24rpx;
}
/* 电话及导航 */
.top {
        width: 100%;
        height: 240rpx;
        display: flex;
        flex-direction: row;
        align-items: center;
        border-bottom: 1px solid #e5e5e5;
}
.top_l {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
}
.top_c {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-left: 1px solid #e5e5e5;
}
.top_img {
        width: 80rpx;
        height: 80rpx;
}
.top_text {
        text-align: center;
        margin-top: 20rpx;
        font-size: 32rpx;
        color: #43967c;
}

/* 住房车 */

.coupons {
        padding: 0;
        width: 100%;
        height: 400rpx;
}

.coupons-scroll {
        white-space: nowrap;
        height: 350rpx;
        width: 100%;
        display: flex;
        flex-direction: row;
}

.coupons-item {
        width: 300rpx;
        height: auto;
        margin: 10rpx;
        padding-top: 20rpx;
        padding-left: 15rpx;
        background-color: #fff;
        box-sizing: content-box;
        font-size: 20rpx;
        overflow: hidden;
        color: #000;
        display: inline-block;
        align-items: center;
}

.coupons-img {
        position: relative;
}

.coupons-img .coupons-img-img {
        overflow: hidden;
        width: 350rpx;
        height: 200rpx;
        background: #eee;
}

.coupons-img .coupons-img-text {
        position: absolute;
        left: 0px;
        bottom: 10rpx;
        width: 110rpx;
        height: 40rpx;
        background: #666;
        color: #fff;
        text-align: center;
        line-height: 40rpx;
}

.wxParse{
        padding: 0 10px;
        box-sizing: content-box;
        overflow: hidden;
}

.sus-h2 {
        color: red;
}

.img_box image {
        width: 100%;
        height: auto;
        padding: 0;
}

.common-title{
        width: 100%;
        height: 60rpx;
        line-height: 60rpx;
        font-weight: bold;
        margin-top: 30rpx;
        font-size: 36rpx;
        color: #484848;
        box-sizing: border-box;
        overflow: hidden;
        padding-left: 20rpx;
}
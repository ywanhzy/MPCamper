        <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input weui-cell_vcode">
                        <view class="weui-cell__hd">
                                <view class="weui-label">手机号</view>
                        </view>
                        <view class="weui-cell__bd">
                                <input class="weui-input" name="tel" value="{{ tel }}" bindinput="bindKeyInput" maxlength="11" type="number" placeholder="请输入手机号" />
                        </view>
                       
                </view>

                <view class="weui-cell weui-cell_input weui-cell_vcode">
                        <view class="weui-cell__hd">
                                <view class="weui-label">验证码</view>
                        </view>
                        <view class="weui-cell__bd">
                                <input class="weui-input" name="code" value="{{ code }}" type="number"  maxlength="4"  placeholder="请输入验证码" />
                        </view>
                        <view class="weui-cell__ft" style="text-align: left">
                                <image class="weui-vcode-img" style="width: 120px; height: 40px;" src="{{codeImgUrl}}" bindtap="refurbishCode"></image>
                        </view>
                </view>
        </view>
        <button class="weui-btn" type="primary" formType="submit">下一步</button>
        </form>
</view>
/* pages/myOrder/index.wxss */
.page, 
.page__bd, 
.weui-tab__content {
	height: 100%;
	padding-bottom: 0;
}

.items{
  display: flex;  
  flex-direction: column;
  padding: 25rpx;  
}

.item{
  width: 100%;
  display: flex;  
  flex-direction: row;
  padding: 25rpx;  
   height: 260rpx; 
}

.item-image{
  width: 100rpx;
  height: 100rpx;
}

.item-right{
  display: flex;  
  flex-direction: column;
}

.item-right-top{
  display: flex;  
  flex-direction: row;
}

.item-right-top-title{
  margin-left: 15rpx;
}

.item-right-top-status{
  position: absolute;
  text-align: right;
  right: 10rpx;
  font-size: 30rpx;
  margin-right: 40rpx;
  color: #666;
}

.item-right-bottom{
  display: flex;  
  flex-direction: column;
  margin-left: 15rpx;
  
}

.item-right-bottom-text{
  font-size: 30rpx;
  color: #666;
}

.item-bottom{
  width: 100%;
  display: flex;  
  flex-direction: row;
}

.item-bottom-btn{
  position: absolute;
  text-align: right;
  margin-right: 10rpx;
  background: green;
  border-radius: 10rpx;
  font-size: 30rpx;
  right: 20rpx;
}



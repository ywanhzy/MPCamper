<!--pages/myOrder/index.wxml-->
<import src="../../components/prompt/prompt.wxml"/>

<view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for-items="{{ tabs}}" wx:key="{{ index }}">
                    <view id="{{ index }}" class="weui-navbar__item {{ activeIndex == index ? 'weui-bar__item_on' : '' }}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{ item }}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{ sliderLeft }}px; transform: translateX({{ sliderOffset }}px); -webkit-transform: translateX({{ sliderOffset }}px);"></view>
            </view>
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{ activeIndex != 0 }}">
                	<template is="prompt" data="{{ ...$wux.prompt.msg1 }}"/>
                </view>
                <view class="weui-tab__content" hidden="{{ activeIndex != 1 }}">
                	<template is="prompt" data="{{ ...$wux.prompt.msg2 }}"/>
                </view>
                <view class="weui-tab__content" hidden="{{ activeIndex != 2 }}">
                	<template is="prompt" data="{{ ...$wux.prompt.msg3 }}"/>
                </view>
                <view class="weui-tab__content" hidden="{{ activeIndex != 3 }}">
                	<template is="prompt" data="{{ ...$wux.prompt.msg4 }}"/>
                </view>
            </view>

            <view class="item">
                <!-- <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{ order }}" wx:key=""> -->
                    <view class="item-image">
                        <image class="weui-media-box__thumb" src="../../images/index_room.png" />
                    </view>
                    <view class='item-right'>
                        <view class='item-right-top'>
                            <text class='item-right-top-title'>根据反馈给内分泌科跟你分开空间跟你分开功能，方面</text>
                            <text class='item-right-top-status'>待入住</text>
                        </view>
                    </view>
                <!-- </view> -->
            </view>
        </view>
    </view>
</view>

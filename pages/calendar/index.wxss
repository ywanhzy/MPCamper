/* pages/calendar/calendar.wxss */
page{
	height: 100%;
	background: white;
  
}
.containers{
	width: 100%;
	height: 100%;
  padding: 0;
}
.wk{
	height: 40px;
	box-shadow: 0 2px 5px  #999999 ;
	position: absolute;
	top: 0;
}

.flex{
	display: flex;
	width: 100%;
	align-items: center;
}
.flexc{
	display: flex;
	width: 100%;
	align-items: center;
	justify-content: center;
}
.flexb{
	display: flex;
	width: 100%;
	justify-content: space-between;
	align-items: center;
}
.flexa{
	display: flex;
	width: 100%;
	justify-content: space-around;
}
.flexcColumn{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.flexaColumn{
	display: flex;
	flex-direction: column;
	
	justify-content: space-around;
}
.flexbColumn{
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.wk-item {
	flex: 1;
	text-align: center;
	font-size: 12px;
	color: #333333;
}
.data-box{
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	padding-top: 40px; 
}
.date-item{
	min-height: 60px;
	width: 100%;
	margin-bottom:20px;
}
.date-ym{
	font-size: 14px;
	text-align: center;
	padding:20px 0;
}
.date-day{
	width: 100%;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
}
.date-day-item{
	width: 14.285%;
	text-align: center;
	box-sizing: border-box;
	font-size: 12px;
	color: #333333;
}
.date-day-item .show-date{
	display:block;
	min-width: 65rpx;
	min-height: 65rpx;
	line-height: 65rpx;
	
}
.active-day{
	background: #ff6101;
	color: white;
	border-radius: 50%;
}




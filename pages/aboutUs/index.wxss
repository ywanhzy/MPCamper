/* pages/aboutUs/aboutUs.wxss */

.container {
        display: flex;
        width: 100%;
        flex-direction: column;
        padding: 0;
        align-items: center;
}

.top {
        display: flex;
        flex-flow: column;
        background-color: #43967c;
        padding: 80rpx 0;
        width: 100%;
        align-items: center;
}

.version {
        color: white;
        font-size: 13px;
        margin-top: 5px;
}

.top-image {
        width: 200rpx;
        height: 100rpx;
}

.desc {
        margin: 40rpx;
        font-size: 30rpx;
        color: #666;
        line-height: 30px;
}

.btn {
        width: 104px;
        height: 33px;
        line-height: 33px;
        color: #fff;
        font-size: 13px;
        background-color: #43967c;
        margin-top: 10px;
        border: 1px solid #fff;
        border-radius:35px;
        text-align: center;
}

.btn-hover {
        background-color: #50a98d;
}
